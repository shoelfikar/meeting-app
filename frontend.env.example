# API Configuration
VITE_API_URL=http://localhost:8080
VITE_API_VERSION=v1

# WebSocket Configuration (for WebRTC signaling)
VITE_WS_URL=ws://localhost:8080
VITE_WS_PATH=/ws

# Server-Sent Events Configuration
VITE_SSE_URL=http://localhost:8080
VITE_SSE_PATH=/api/meetings

# Environment
VITE_ENV=development

# Feature Flags
VITE_ENABLE_RECORDING=true
VITE_ENABLE_SCREEN_SHARE=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_VIRTUAL_BACKGROUND=false

# Meeting Configuration
VITE_MAX_PARTICIPANTS=50
VITE_DEFAULT_VIDEO_QUALITY=720p
VITE_DEFAULT_AUDIO_BITRATE=128000

# WebRTC Configuration
VITE_STUN_SERVER=stun:stun.l.google.com:19302
# VITE_TURN_SERVER=turn:your-turn-server.com:3478
# VITE_TURN_USERNAME=your-username
# VITE_TURN_PASSWORD=your-password

# UI Configuration
VITE_APP_NAME=Meet App
VITE_APP_DESCRIPTION=Google Meet Clone
VITE_SUPPORT_EMAIL=support@meetapp.com

# Analytics (optional)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Storage
VITE_LOCAL_STORAGE_PREFIX=meetapp_

# Timeout Configuration (in milliseconds)
VITE_API_TIMEOUT=30000
VITE_WS_RECONNECT_INTERVAL=5000
VITE_SSE_RECONNECT_INTERVAL=3000

# Debug
VITE_DEBUG_MODE=false
VITE_SHOW_LOGS=true
